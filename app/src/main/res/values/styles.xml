<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for RoundedButton -->
    <style name="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/C2S2</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme attributes here -->
        <item name="colorPrimary">@color/C2S1</item>
        <item name="colorPrimaryDark">@color/C2S1</item>
        <item name="colorAccent">@color/C2S1</item>
    </style>

    <!-- Add the NoActionBar style -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
